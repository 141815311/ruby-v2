---
import Modal from '../components/modal';
import Button from '../components/button.astro';
import Header from '../components/header.astro';
import '../styles/globals.css';
import Password from '../components/password';
---

<head>
    <script src="/uv/uv.bundle.js" defer></script>
    <script src="/uv/uv.config.js" defer></script>
    <script src="/dip/dip.config.js" defer></script>
    <script src="/dip/dip.page.js" defer></script>
    <script src="/js/index.js" defer></script>
    <script src="/uv/uv-sw.js" defer></script>
    <script src="/uv/search.js" defer></script>
    <script src="/osana/osana.bundle.js" defer></script>
    <script src="/osana/osana.config.js" defer></script>
    <script src="/js/settings.js" defer></script>
    <link id="favicon" rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/assets/fontawesome/css/all.min.css" />
    <script src="/js/control.js" defer></script>
    <script src="/js/appSuggestions.js" defer></script>
    <script src="/js/searchSuggestions.js" defer></script>
    <!-- ALL METADATA -->
    <meta name="description" content="Ruby BETA" />
    <meta name="keywords" content="Ruby" />
    <meta name="author" content="Ruby" />
    <meta name="title" content="Ruby" />
    <meta name="description" content="Ruby" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://rubytest.motortruck1221.tech/" />
    <meta property="og:title" content="Ruby" />
    <meta property="og:description" content="Ruby BETA" />
    <meta property="og:image" content="" />
    <meta property="twitter:card" content="summary_large_image" />
    <meta
        property="twitter:url"
        content="https://rubytest.motortruck1221.tech/"
    />
    <meta property="twitter:title" content="Ruby" />
    <meta property="twitter:description" content="Ruby BETA" />
    <meta property="twitter:image" content="" />
    <!-- END METADATA -->
    <script
        type="text/javascript"
        src="/js/lib/particles/particles.min.js"
        defer
    ></script>
    <script src="/js/particles.js" defer></script>
    <script src="/js/register.js" defer></script>
    <link rel="manifest" href="/manifest.json" />
</head>
<body>
    <Header />
    <Password client:only="react" />
    <Modal client:only="react" />
    <h1 class="get-started-text">Search</h1>
    <form class="dipform" action="submit" id="uv-form">
        <div class="search">
            <input
                id="uv-search-engine"
                value="https://www.google.com/search?q=%s"
                type="hidden"
            />
            <input
                id="uv-address"
                type="text"
                class="dipinput"
                placeholder="Privately Search the web..."
            />
        </div>
        <Button
            secondButtonId="search"
            buttonText="Search"
            buttonType="submit"
        />
    </form>
    <div id="suggestions" class="dnone">
        <ul id="suggestions-data"></ul>
    </div>
    <iframe
        class="dnone"
        id="load-iframe"
        style="height: calc(100% - 4rem);width: 100%;border: none;position: fixed;top: 4rem;right: 0;left: 0;bottom: 0;border: none; background: var(--bg-color);"
    >
    </iframe>
    <iframe
        class="dnone"
        id="uv-iframe"
        style="height: calc(100% - 4rem);width: 100%;border: none;position: fixed;top: 4rem;right: 0;left: 0;bottom: 0;border: none; background: var(--bg-color);"
    >
    </iframe>
    <div id="pjs" class="dnone particles"></div>
    <div class="dnone" id="control">
        <i
            class="fas fa-arrows-rotate hover:brightness-200"
            onclick="refreshIframe()"></i>
        <i class="fas fa-arrow-left hover:brightness-200" onclick="backIframe()"></i>
        <i class="fas fa-arrow-right hover:brightness-200" onclick="forwardIframe()"></i>
        <i class="fas fa-expand hover:brightness-200" onclick="fullscreenIframe()"></i>
        <i class="fas fa-times hover:brightness-200" onclick="exitIframe()"></i>
    </div>
</body>
<style>
    #control {
        position: absolute;
        top: 1.25rem;
        left: 1rem;
        display: flex;
        flex-direction: row;
        gap: 0.75rem;
        border: none;
        background: none;
        filter: var(--brightness-filter);
        color: var(--text-color);
        font-size: 1.5rem;
        cursor: pointer;
        outline: none;
        font-family: var(--font);
    }

    .get-started-text {
        font-size: 3rem;
        text-align: center;
        margin-top: 2rem;
        position: absolute;
        top: 12rem;
        left: 50%;
        transform: translate(-50%, -30%);
        -moz-transform: translate(-50%, -30%);
        -webkit-transform: translate(-50%, -30%);
        -ms-transform: translate(-50%, -30%);
        -o-transform: translate(-50%, -30%);
        color: var(--text-color);
        font-family: var(--font);
    }
    #uv-address {
        width: 35%;
        height: 2.5rem;
        border: 1px solid var(--border-color);
        border-radius: 0.75rem;
        padding: 0.5rem;
        font-size: 1.2rem;
        color: var(--text-color);
        background: var(--text-bg-color);
        outline: none;
        text-align: center;
        position: absolute;
        top: 19rem;
        left: 50%;
        transform: translate(-50%, -50%);
        -moz-transform: translate(-50%, -50%);
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        -o-transform: translate(-50%, -50%);
        font-family: var(--font);
    }
    #suggestions {
        width: 35%;
        height: 7rem;
        border-left: 1px solid var(--border-color);
        border-right: 1px solid var(--border-color);
        border-bottom: 1px solid var(--border-color);
        border-radius: 0 0 0.75rem 0.75rem;
        padding: 0.5rem;
        font-size: 1.2rem;
        color: var(--text-color);
        background: var(--text-bg-color);
        outline: none;
        text-align: center;
        position: absolute;
        top: 23.75rem;
        left: 50%;
        transform: translate(-50%, -50%);
        -moz-transform: translate(-50%, -50%);
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        -o-transform: translate(-50%, -50%);
        font-family: var(--font);
        overflow-x: auto;
        cursor: pointer;
    }
    li {
        list-style: none;
        padding: 0.5rem;
        cursor: pointer;
        font-family: var(--font);
        color: var(--text-color);
        position: relative;
    }
</style>
<style is:global>
    #search {
        position: absolute;
        border-radius: 0.75rem;
        border: 1px solid var(--border-color);
        top: 19.5rem;
        left: 72.5%;
        transform: translate(-51.5%, -72%);
        -moz-transform: translate(-51.5%, -72%);
        -webkit-transform: translate(-51.5%, -72%);
        -ms-transform: translate(-51.5%, -72%);
        -o-transform: translate(-51.5%, -72%);
        background: var(--text-bg-color);
        color: var(--text-color);
        height: 2.5rem;
        font-family: var(--font);
        /* filter: var(--brightness-filter); */
    }
    .dnone {
        display: none;
        visibility: none;
    }
</style>
