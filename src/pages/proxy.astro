---
import Modal from '../components/modal';
import Button from '../components/button.astro';
import Header from '../components/header.astro';
import '../styles/globals.css';
---
<body>
    <Header />
    <Modal client:only="react" />
	<h1 class="get-started-text">Search</h1>
    <form class="dipform" action="submit" id="uv-form">
        <div class="search">
          <input
            id="uv-search-engine"
            value="https://www.google.com/search?q=%s"
            type="hidden"
          />
          <input
            id="uv-address"
            type="text"
            class="dipinput"
            placeholder="Privately Search the web..."
          />
        </div>
        <Button secondButtonId="search" buttonText="Search" buttonType="submit" />
      </form>
</body>
<style>
    .get-started-text {
		font-size: 3rem;
		text-align: center;
		margin-top: 2rem;
		position: absolute;
		top: 30%;
		left: 50%;
		transform: translate(-50%, -30%);
		-moz-transform: translate(-50%, -30%);
		-webkit-transform: translate(-50%, -30%);
		-ms-transform: translate(-50%, -30%);
		-o-transform: translate(-50%, -30%);
		color: var(--text-color);
	}
    #uv-address {
        width: 35%;
        height: 2.5rem;
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        padding: 0.5rem;
        font-size: 1.2rem;
        color: var(--text-color);
        background: var(--text-bg-color);
        outline: none;
        text-align: center;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        -moz-transform: translate(-50%, -50%);
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        -o-transform: translate(-50%, -50%);
    }
</style>
<style is:global>
  #search {
    position: absolute;
    top: 51.5%;
    left: 72%;
    transform: translate(-51.5%, -72%);
    -moz-transform: translate(-51.5%, -72%);
    -webkit-transform: translate(-51.5%, -72%);
    -ms-transform: translate(-51.5%, -72%);
    -o-transform: translate(-51.5%, -72%);
    background: var(--text-bg-color);
    color: var(--text-color);
    height: 2.5rem;
    /* filter: var(--brightness-filter); */
  }
</style>